@import '../../../common/style/mixin'

.contacts-item
  width 100%
  box-sizing border-box
  height 52px
  padding 0 12px
  background #ffffff
  &:active
    background $line-color
  .content
    display flex
    align-items center    
    width 100%
    height 100%
    border-1px($line-color)
  .avatar
    flex 0 0 36px
    width 36px
    height 36px
    background #233459
  .name
    flex 1
    height 36px
    line-height 36px
    font-size 16px
    padding-left 12px